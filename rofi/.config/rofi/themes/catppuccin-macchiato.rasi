@theme "/dev/null"

* {
	bg: #EFF1F5;
	background-color: @bg;
}


configuration {
	show-icons: true;
		icon-theme: "Papirus";
	location: 0;
	font: "JetBrainsMono Nerd Font 12";	
	display-drun: "Launch:";
}

window {
	width: 35%;
	transparency: "real";
	orientation: vertical;
	border-color: #74adc0;
}

mainbox {
	children: [inputbar, listview];
}


// ELEMENT
// -----------------------------------

element {
	padding: 4 12;
	text-color: #4C4F69;
}

element selected {
	text-color: yellow;
	background-color: hotpink;
}

element-text {
	background-color: inherit;
	text-color: inherit;
}

element-icon {
	size: 16 px;
	background-color: inherit;
	padding: 0 6 0 0;
	alignment: vertical;
}

listview {
	lines: 5;
	padding: 8 0;
	fixed-height: true;
	fixed-columns: true;
	fixed-lines: true;
	border: 0 10 6 10;
}

// INPUT BAR 
//------------------------------------------------

entry {
	text-color: hotpink;
	padding: 10 10 0 0;
	margin: 0 -2 0 0;
}

inputbar {
  background-color: pink;
	padding: 0 0 0;
	margin: 0 0 0 0;
} 

prompt {
	text-color: hotpink;
	padding: 10 6 0 10;
	margin: 0 -2 0 0;
}
