# use gnu ls command
alias ls='ls -Ga --color=auto --group-directories-first'
alias l='ls -Ghloa --time-style=long-iso --color=auto --group-directories-first'
alias lsd='ls -Ga --color=auto --group-directories-first --directory *(D/)'

# Always enable colored `grep` output
# Note: `GREP_OPTIONS="--color=auto"` is deprecated, hence the alias usage.
alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'





unameOut="$(uname -s)"


if [[ "$unameOut" == "Darwin" ]]; then 
  # Google Chrome
  alias chrome='/Applications/Google\ Chrome.app/Contents/MacOS/Google\ Chrome'

  # IP addresses
  # alias ip="dig +short myip.opendns.com @resolver1.opendns.com"
  alias localip="ipconfig getifaddr en0"
  alias ip="
  echo '\nlocalip : \t$(localip)
  ipv4 : \t\t$(dig -4 TXT +short o-o.myaddr.l.google.com @ns1.google.com | tr -d '"')
  ipv6 : \t\t$(dig -6 TXT +short o-o.myaddr.l.google.com @ns1.google.com | tr -d '"')
  '
  "
  alias ips="ifconfig -a | grep -o 'inet6\? \(addr:\)\?\s\?\(\(\([0-9]\+\.\)\{3\}[0-9]\+\)\|[a-fA-F0-9:]\+\)' | awk '{ sub(/inet6? (addr:)? ?/, \"\"); print }'"

  alias listdev="ifconfig | grep broadcast | arp -a"

  # Recursively delete `.DS_Store` files
  alias cleanup_ds="find . -type f -name '*.DS_Store' -ls -delete"

  # Empty the Trash on all mounted volumes and the main HDD.
  # Also, clear Appleâ€™s System Logs to improve shell startup speed.
  # Finally, clear download history from quarantine. https://mths.be/bum
  alias emptytrash="sudo rm -rfv /Volumes/*/.Trashes; sudo rm -rfv ~/.Trash; sudo rm -rfv /private/var/log/asl/*.asl; sqlite3 ~/Library/Preferences/com.apple.LaunchServices.QuarantineEventsV* 'delete from LSQuarantineEvent'"

  alias date="date '+%A, %x, %r'"

fi


function socials() {
  github="https://github.com/chris-av"
  linkedin="https://www.linkedin.com/in/christian-a-valenzuela/"
  website="https://chrisav.dev"

  if [[ $# == 0 ]]; then
    echo "github: $github"
    echo "linkedin: $linkedin"
    echo "website: $website"
    return 0
  fi

  if [[ $# > 1 ]]; then
    echo "received too many arguments ... "
    return 1
  fi

  if [[ $1 == "--linkedin" ]]; then
    echo $linkedin
  elif [[ $1 == "--github" ]]; then
    echo $github
  elif [[ $1 == "--website" ]]; then
    echo $website
  else
    echo "invalid argument : $1"
    return 1
  fi

  return 0

}

